@model IEnumerable<WhatsOnTap.Models.Beer>

@{
  Layout = "_Layout";
}

  <div class='container'>
    <h1>Sample index page for Beers</h1>

    <div class="beersGridThree">
      <div>Beer Name</div>
      <div>Brewery</div>
      <div>Style</div>

      @foreach (var beer in Model)
      {
        <div><a href="/beers/@beer.BeerId">@beer.BeerName</a></div>
        <div>@beer.BeerBreweryName</div>
        <div>@beer.BeerStyle</div>
      }

    </div>

    <a href="/"><button>Back</button></a>

  </div>
