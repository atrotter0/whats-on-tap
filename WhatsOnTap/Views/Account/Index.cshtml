@{
    Layout = "_Layout";
}

@using System.Security.Claims

<div class="container">
    @if(User.Identity.IsAuthenticated)
    {
                <div class="splash-logo">
                <img src="~/img/wot-logo-transparent.png" alt="whats on tap logo">
                </div>
                <div class="index-buttons">
                <a class="btn btn-outline-dark btn-lg" id="bar-button" href="/bars">Bars</a>

                <a class="btn btn-outline-dark btn-lg" id="beer-button" href="/beers">Beers</a>

                <a class="btn btn-outline-dark btn-lg" id="fav-beer-button" href="/user/beers">My Beers</a>
                </div>
            
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle"></i>&nbsp;<strong>Oops! </strong> You need to log in to view this page!
        </div>
    }
</div>