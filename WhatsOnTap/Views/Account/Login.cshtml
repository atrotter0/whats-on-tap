@{
    Layout = "_Layout";
}

@using WhatsOnTap.ViewModels

@model LoginViewModel

<div class="container">
    <div class="form-model">
        <h2 class="form-header">Log In</h2>
        <hr>
        <br>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new {@class="form-control", required="true"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new {@class="form-control", required="true"})
            </div>

            <a href="/" class="btn btn-lg btn-outline-warning">Cancel</a>
            <input type="submit" class="btn btn-lg btn-outline-primary" value="Log in" class="btn btn-default" />
        }
    </div>
</div>