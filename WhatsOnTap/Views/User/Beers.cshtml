@{
    Layout = "_Layout";
}

@using System.Security.Claims

<div class="container">
    @if (User.Identity.IsAuthenticated && User.IsInRole("user"))
    {
        <h1>Your Beer List, @User.Identity.Name:</h1>
    }
    else
    {
        await Html.RenderPartialAsync("_RequiresLogin");
    }
</div>